{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-article-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <img class="show-article-img" src={{ camp.image }}>
                            <div class="show-article-title-container d-inline-block pl-3 align-middle">
                                <span class="show-article-title ">{{camp.title}}</span>
                                <br>
                                <span class="align-left article-details"><img class="article-author-img rounded-circle" src={{ asset("images/alien-profile.png") }}> Anna </span>
                                <span class="pl-2 article-details"> 3 uur geleden</span>
                                <span class="pl-2 article-details">
                                    <span id="like-counter">5</span>
                                    <a href="/news/krabpaaljongleren/heart" id="like-heart-button" class="fa fa-heart-o like-article"></a>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="article-text">
                                <p>{{ camp.description }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="share-icons mb-5"><span class="pr-1">Delen:</span> <i class="pr-1 fa fa-facebook-square"></i><i class="pr-1 fa fa-twitter-square"></i><i class="pr-1 fa fa-reddit-square"></i><i class="pr-1 fa fa-share-alt-square"></i></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <h3><i class="pr-3 fa fa-comment"></i>3 Reacties</h3>
                            <hr>

                            {{ form_start(reaction_form) }}
                            {{ form_row(reaction_form.name) }}
                            {{ form_row(reaction_form.reaction) }}
                            {{ form_row(reaction_form.camp_id) }}
                            {{ form_end(reaction_form) }}


                            {% for reaction in reactions %}
                                <div class="row">
                                    <div class="col-sm-12">
                                        <img class="comment-img rounded-circle" src="images/alien-profile.png">
                                        <div class="comment-container d-inline-block pl-3 align-top">
                                            <span class="commenter-name">{{reaction.name}}</span>
                                            <br>
                                            <span class="comment">{{reaction.reaction}}</span>
                                            <p><a href="#">Reageer</a></p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
